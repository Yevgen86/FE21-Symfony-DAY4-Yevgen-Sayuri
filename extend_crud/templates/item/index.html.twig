{% extends 'base.html.twig' %}

{% block title %}Items{% endblock %}

{% block body %}
    <h1 class="page-header mt-4 fw-bold"> Items! </h1>

<div class="table-responsive">
    
    <table class="table table-dark table-hover align-middle">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col" class="text-center">â‚¬</th>
          <th scope="col" class="text-center">Description</th>
          <th scope="col" class="text-center">Image</th>
          <th scope="col" class="text-center">Action</th>
        </tr>
      </thead>
      <tbody>
        {% for item in items %}
            <tr>
                <th scope="row">{{ item.id }}</th>
                <td>{{ item.name }}</td>
                <td class="text-center">{{ item.price }}</td>
                <td>{{ item.description }}</td>
                <td><img src="{{ asset('pictures/'~item.image) }}" alt="{{ item.name }}" style="max-width: 150px; height: 100px;"></td>
                <td>
                    <div class="btn-group d-flex flex-row justify-content-around align-items-center" role="group">
                        <a href="/item/{{item.id}}" class="btn btn-success text-white" title="Details"><i class="fas fa-info"></i></a>
                        <a href="/edit/{{item.id}}" class="btn btn-secondary text-white" title="Edit"><i class="fas fa-edit"></i></a>
                        <a href="/delete/{{item.id}}" class="btn btn-danger text-white" title="Delete"><i class="fas fa-trash"></i></a>
                    </div>
                </td>
            </tr>
        {% endfor %}
      </tbody>
    </table>
</div>
